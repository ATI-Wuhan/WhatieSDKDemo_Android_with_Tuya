<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <include layout="@layout/layout_title"/>

    <RelativeLayout
        android:id="@+id/rl_time_day7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rl_height"
        android:background="@drawable/selector_rl_item"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingRight="@dimen/padding_15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/timer_day_sunday"
            android:textSize="@dimen/text_17sp"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/iv_time_day7"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_mark"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_time_day1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rl_height"
        android:background="@drawable/selector_rl_item"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingRight="@dimen/padding_15dp"
        android:layout_marginTop="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/timer_day_monday"
            android:textSize="@dimen/text_17sp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/iv_time_day1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_mark"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_time_day2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rl_height"
        android:background="@drawable/selector_rl_item"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingRight="@dimen/padding_15dp"
        android:layout_marginTop="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/timer_day_tuesday"
            android:textSize="@dimen/text_17sp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/iv_time_day2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_mark"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_time_day3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rl_height"
        android:background="@drawable/selector_rl_item"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingRight="@dimen/padding_15dp"
        android:layout_marginTop="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/timer_day_wednesday"
            android:textSize="@dimen/text_17sp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/iv_time_day3"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_mark"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_time_day4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rl_height"
        android:background="@drawable/selector_rl_item"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingRight="@dimen/padding_15dp"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="@string/timer_day_thursday"
            android:textColor="@color/black"
            android:textSize="@dimen/text_17sp" />

        <ImageView
            android:id="@+id/iv_time_day4"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_mark"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_time_day5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rl_height"
        android:background="@drawable/selector_rl_item"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingRight="@dimen/padding_15dp"
        android:layout_marginTop="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/timer_day_friday"
            android:textSize="@dimen/text_17sp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/iv_time_day5"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_mark"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_time_day6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rl_height"
        android:background="@drawable/selector_rl_item"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingRight="@dimen/padding_15dp"
        android:layout_marginTop="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/timer_day_saturday"
            android:textSize="@dimen/text_17sp"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/iv_time_day6"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_mark"
            android:visibility="gone"/>
    </RelativeLayout>



</LinearLayout>