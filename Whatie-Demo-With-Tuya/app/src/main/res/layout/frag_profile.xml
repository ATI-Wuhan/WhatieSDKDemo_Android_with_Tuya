<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_bg_height"
        android:background="@drawable/ic_profile_bg"
        android:gravity="center"
        android:orientation="vertical">


        <com.whatie.ati.androiddemo.widget.CircleImageView
            android:id="@+id/iv_profile_photo"
            android:layout_width="59dp"
            android:layout_height="58dp"
            android:layout_marginTop="34dp"
            android:src="@drawable/ic_avatar" />


        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:text="@string/profile_name"
            android:textColor="@color/white"
            android:textSize="@dimen/profile_name_scale" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_profile_menu_my_devices"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_menu_height"
        android:layout_marginBottom="1dp"
        android:background="@drawable/selector_rl_item"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_profile_menu_my_device_icon"
            android:layout_width="@dimen/profile_menu_image_scale"
            android:layout_height="@dimen/profile_menu_image_scale"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/act_personal_picture_left"
            android:src="@drawable/ic_my_devices" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_profile_menu_my_device_icon"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="@string/profile_menu_device_list"
            android:textColor="@color/black"
            android:textSize="@dimen/profile_menu_text_scale" />

        <ImageView
            android:layout_width="@dimen/profile_menu_right"
            android:layout_height="@dimen/profile_menu_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_10dp"
            android:src="@drawable/ic_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_profile_menu_devices_sharing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_menu_height"
        android:layout_marginBottom="1dp"
        android:background="@drawable/selector_rl_item">

        <ImageView
            android:id="@+id/iv_profile_menu_sharing_icon"
            android:layout_width="@dimen/profile_menu_image_scale"
            android:layout_height="@dimen/profile_menu_image_scale"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/act_personal_picture_left"
            android:src="@drawable/ic_share" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_profile_menu_sharing_icon"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="@string/profile_menu_device_sharing"
            android:textSize="@dimen/profile_menu_text_scale" />

        <ImageView
            android:layout_width="@dimen/profile_menu_right"
            android:layout_height="@dimen/profile_menu_right"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_10dp"
            android:src="@drawable/ic_right" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_profile_menu_integration"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_menu_height"
        android:layout_marginBottom="1dp"
        android:background="@drawable/selector_rl_item">

        <ImageView
            android:id="@+id/iv_profile_menu_integration_icon"
            android:layout_width="@dimen/profile_menu_image_scale"
            android:layout_height="@dimen/profile_menu_image_scale"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/act_personal_picture_left"
            android:src="@drawable/ic_profile_integration" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_profile_menu_integration_icon"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="@string/profile_menu_integration"
            android:textColor="@color/black"
            android:textSize="@dimen/profile_menu_text_scale" />

        <ImageView
            android:layout_width="@dimen/profile_menu_right"
            android:layout_height="@dimen/profile_menu_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_10dp"
            android:src="@drawable/ic_right" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_profile_menu_help_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_menu_height"
        android:layout_marginBottom="1dp"
        android:background="@drawable/selector_rl_item">

        <ImageView
            android:id="@+id/iv_profile_menu_experince_icon"
            android:layout_width="@dimen/profile_menu_image_scale"
            android:layout_height="@dimen/profile_menu_image_scale"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/act_personal_picture_left"
            android:src="@drawable/ic_help" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_profile_menu_experince_icon"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="@string/profile_menu_help_feedback"
            android:textColor="@color/black"
            android:textSize="@dimen/profile_menu_text_scale" />

        <ImageView
            android:layout_width="@dimen/profile_menu_right"
            android:layout_height="@dimen/profile_menu_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_10dp"
            android:src="@drawable/ic_right" />
    </RelativeLayout>
</LinearLayout>