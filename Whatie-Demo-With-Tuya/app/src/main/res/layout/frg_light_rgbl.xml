<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"
        android:textColor="@color/pure_red"
        android:textSize="@dimen/text_20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"
            android:layout_weight="1"/>
        <SeekBar
            android:id="@+id/sb_red"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5dp"
            android:layout_weight="10"
            android:max="255" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="255"
            android:gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G"
        android:textColor="@color/pure_green"
        android:textSize="@dimen/text_20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"
            android:layout_weight="1"/>
        <SeekBar
            android:id="@+id/sb_green"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5dp"
            android:layout_weight="10"
            android:max="255" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="255"
            android:gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:textColor="@color/pure_blue"
        android:textSize="@dimen/text_20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"
            android:layout_weight="1"/>
        <SeekBar
            android:id="@+id/sb_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5dp"
            android:layout_weight="10"
            android:max="255" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="255"
            android:gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        android:textSize="@dimen/text_20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center"
            android:layout_weight="1"/>
        <SeekBar
            android:id="@+id/sb_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5dp"
            android:max="99"
            android:layout_weight="10"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="100"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_66dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_red_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_5dp"
            android:gravity="center"
            android:textColor="@color/pure_red"
            android:textSize="@dimen/text_20sp"
            android:text="0"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_green_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_5dp"
            android:gravity="center"
            android:textColor="@color/pure_green"
            android:textSize="@dimen/text_20sp"
            android:text="0"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_blue_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_5dp"
            android:gravity="center"
            android:textColor="@color/pure_blue"
            android:textSize="@dimen/text_20sp"
            android:text="0"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_light_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_5dp"
            android:gravity="center"
            android:textSize="@dimen/text_20sp"
            android:text="0"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_set_rgbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set"
        android:layout_margin="@dimen/padding_10dp"
        />


</LinearLayout>