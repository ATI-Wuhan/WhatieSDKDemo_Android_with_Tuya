<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="128"
    android:background="#80000000">

    <RelativeLayout
        android:id="@+id/persondata_change_portrait_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:alpha="255">
        <TextView
            android:id="@+id/tv_select_photo_form_album"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:alpha="255"
            android:textColor="@color/colorAccent"
            android:background="@drawable/selector_photo_from_album"
            android:text="@string/pop_select_photo_tip1"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            />
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_below="@id/tv_select_photo_form_album"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_select_photo_form_camera"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:alpha="255"
            android:background="@drawable/selector_photo_form_camera"
            android:textColor="@color/colorAccent"
            android:text="@string/pop_select_photo_tip2"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_below="@id/line"
            />
        <TextView
            android:id="@+id/tv_select_photo_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_white_item"
            android:textColor="@color/feedback"
            android:text="@string/room_detail_cancel"
            android:textSize="20sp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_below="@id/tv_select_photo_form_camera"
            />
        <View
            android:layout_below="@id/tv_select_photo_cancel"
            android:layout_height="15dp"
            android:layout_width="match_parent"/>
    </RelativeLayout>

</RelativeLayout>