<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Device name:"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/et_device_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <Button
                android:id="@+id/change_device_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Change Device Name"/>

            <LinearLayout
                android:id="@+id/ll_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="bottom"
                    android:text="You are the owner of this device. If device is online, You can unbind device."/>

                <Button
                    android:id="@+id/bt_unbind"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Unbind Device"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If device is offline, you can delete Device."/>
                <Button
                    android:id="@+id/bt_delete_by_owner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Delete Device"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="And you can share the device to your friends."/>
                <Button
                    android:id="@+id/bt_share_device"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Share Device"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_not_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="bottom"
                    android:text="You are the one sharing the device. You can delete this sharing."/>
                <Button
                    android:id="@+id/bt_delete_sharing_device"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Delete Device"/>
            </LinearLayout>

            <Button
                android:id="@+id/bt_countdown"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Countdown"/>

            <Button
                android:id="@+id/bt_timer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Timer"/>
        </LinearLayout>
    </ScrollView>




</LinearLayout>