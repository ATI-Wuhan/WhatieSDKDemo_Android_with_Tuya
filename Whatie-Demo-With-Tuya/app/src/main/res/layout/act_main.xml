<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main_act"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/layout_title"/>


    <LinearLayout
        android:id="@+id/rl_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_height"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_home_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_home"
                android:layout_width="16dp"
                android:layout_height="22dp"
                android:layout_marginTop="@dimen/padding_10dp"
                android:src="@drawable/ic_main_home" />

            <TextView
                android:id="@+id/tv_main_home"
                android:layout_width="wrap_content"

                android:layout_height="@dimen/padding_12dp"
                android:gravity="bottom"
                android:text="@string/main_home"
                android:textColor="@color/main_text"
                android:textSize="@dimen/text_10sp"
                android:layout_marginBottom="@dimen/padding_4dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_profile_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_profile"
                android:layout_width="21dp"
                android:layout_height="22dp"
                android:layout_marginTop="@dimen/padding_10dp"
                android:src="@drawable/ic_main_profile" />

            <TextView
                android:id="@+id/tv_main_profile"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_12dp"
                android:gravity="bottom"
                android:layout_marginBottom="@dimen/padding_4dp"
                android:text="@string/main_profile"
                android:textColor="@color/main_text"
                android:textSize="@dimen/text_10sp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/navigation_height"
        android:layout_alignParentTop="true" />


</RelativeLayout>