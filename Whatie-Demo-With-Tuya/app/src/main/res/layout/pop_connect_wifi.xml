<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="128"
    android:background="#80000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_20dp"
        android:background="@color/no_wifi_connected">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/pop_connect_wifi"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_goto_select_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_10dp"
            android:paddingBottom="@dimen/padding_10dp"
            android:paddingLeft="@dimen/padding_50dp"
            android:paddingRight="@dimen/padding_50dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_to_select_wifi"
            android:text="@string/pop_connect_button"
            android:textColor="@color/white"/>
    </LinearLayout>


</LinearLayout>