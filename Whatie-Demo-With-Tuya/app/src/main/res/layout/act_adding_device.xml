<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/layout_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/progressbar_margin_top">
        <io.netopen.hotbitmapgg.library.view.RingProgressBar
            android:id="@+id/rpb_device_adding_progressbar"
            android:layout_width="@dimen/progressbar_scale"
            android:layout_height="@dimen/progressbar_scale"
            android:layout_centerInParent="true"
            app:ringWidth="@dimen/progressbar_width"
            app:ringProgressColor="@color/colorAccent"
            app:ringColor="@color/colorPrimaryDark"
            app:max="100"
            app:textColor="@color/colorAccent"
            app:textIsShow="true"
            app:textSize="@dimen/text_20sp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/adding_device_please_wait_height"
        android:gravity="center"
        android:text="@string/adding_device_please_wait"
        android:textSize="@dimen/text_18sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/adding_device_device_near"
        android:layout_marginTop="41dp"
        android:textColor="@color/main_text"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/adding_device_wait_desc"
        android:textSize="@dimen/text_14sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/main_text"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding_15dp">
        <LinearLayout
            android:id="@+id/ll_adding_progress_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/adding_progress_step_height"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/tv_adding_progress_step_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/feedback"
                android:textSize="@dimen/text_14sp"
                android:text="@string/adding_progress_step_2"/>
            <ImageView
                android:id="@+id/iv_adding_progress_step_2"
                android:layout_width="@dimen/adding_progress_icon_scale"
                android:layout_height="@dimen/adding_progress_icon_scale"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_5dp"
                android:src="@drawable/ic_loading"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_adding_progress_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/adding_progress_step_height"
            android:orientation="horizontal"
            android:layout_above="@+id/ll_adding_progress_2">
            <TextView
                android:id="@+id/tv_adding_progress_step_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14sp"
                android:text="@string/adding_progress_step_1"/>
            <ImageView
                android:id="@+id/iv_adding_progress_step_1"
                android:layout_width="@dimen/adding_progress_icon_scale"
                android:layout_height="@dimen/adding_progress_icon_scale"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_5dp"
                android:src="@drawable/ic_loading"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_adding_progress_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/adding_progress_step_height"
            android:orientation="horizontal"
            android:layout_below="@+id/ll_adding_progress_2">
            <TextView
                android:id="@+id/tv_adding_progress_step_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/feedback"
                android:textSize="@dimen/text_14sp"
                android:text="@string/adding_progress_step_3"/>
            <ImageView
                android:id="@+id/iv_adding_progress_step_3"
                android:layout_width="@dimen/adding_progress_icon_scale"
                android:layout_height="@dimen/adding_progress_icon_scale"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_5dp"
                android:src="@drawable/ic_loading"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>